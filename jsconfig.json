{
  "vueCompilerOptions": {
    "target": 2.7,
    "extensions": [
      ".vue"
    ]
  },
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"]
    },
    "lib": [
      "esnext", 
      "dom", 
      "dom.iterable", 
      "scripthost"
    ],
    "importHelpers": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
